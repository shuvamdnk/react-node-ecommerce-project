<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Students</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
          <button type="button" onclick="location.href='/add-student'" class="btn btn-sm btn-outline-success">Add Student</button>
          <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Export</button> -->
        </div>
        <!-- <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
          <span data-feather="calendar" class="align-text-bottom"></span>
          This week
        </button> -->
      </div>
    </div>

    <div class="table-responsive p-2">
     <table class="table table-hover" id="example">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Stream</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student,index) => { %>
                <tr>
                    <td><%= index++ %></td>
                    <td><%= student.name %></td>
                    <td><%= student.email %></td>
                    <td><%= student.phone %></td>
                    <td><%= student.stream.toUpperCase() %></td>
                    <td><%= student.address %></td>
                    <td>
                      <a href="/student-edit?id=<%= student.id %>" class="btn btn-outline-warning btn-sm shadow-sm border-0">Edit</a>
                      <a href="/student-delete/<%= student.id %>" class="btn btn-outline-danger btn-sm shadow-sm border-0">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
     </table>
    </div>
</main>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>